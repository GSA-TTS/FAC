@startuml FAC_System_Context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(User, "User", "Auditee/Auditor")
Person(Staff, "Staff", "FAC Manager")

Boundary(atob, "ATO Boundary") {
    System(FAC, "FAC", "Federal Audit Clearinghouse")
}

System(Login, "Login.gov", "ID provider")
System(Email, "GSA Email")

Rel(User, FAC, "Submits Audits to")
Rel(User, Login, "Authenticates with")
Rel(Staff, FAC, "Manages Audits and permissions")
Rel(Staff, Login, "Authenticates with")
Rel(Email, User, "Sends emails to")
Rel(Email, Staff, "Sends emails to")

Rel(Login, FAC, "Provides identities", "email address")

Rel(FAC, Email, "Sends emails using")

@enduml
