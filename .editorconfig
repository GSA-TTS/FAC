# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# 2 space indentation
[*.{js,json,y{a,}ml,html,css,scss,jsonnet,libsonnet}]
indent_style = space
indent_size = 2
